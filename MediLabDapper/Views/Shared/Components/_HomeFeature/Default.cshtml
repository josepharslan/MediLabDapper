@model IEnumerable<ResultFeatureDto>

<section id="hero" class="hero section light-background">

    <img src="~/MediLab-1.0.0/assets/img/hero-bg.jpg" alt="Medilab Arka Plan" data-aos="fade-in">

    <div class="container position-relative">

        <div class="welcome position-relative" data-aos="fade-down" data-aos-delay="100">
            <h2>MEDILAB'A HOŞ GELDİNİZ</h2>
            <p>Deneyimli ekibimizle modern tıbbın imkânlarını, güvenli ve hızlı hizmet anlayışıyla buluşturuyoruz.</p>
        </div>

        <div class="content row gy-4">
            <div class="col-lg-4 d-flex align-items-stretch">
                <div class="why-box" data-aos="zoom-out" data-aos-delay="200">
                    <h3>Neden Medilab?</h3>
                    <p>
                        Uzman hekim kadrosu, 7/24 acil hizmet, ileri tanı teknolojileri ve şeffaf süreç yönetimi.
                        Randevu, sonuç ve tüm tıbbi kayıtlarınıza tek platformdan güvenle ulaşın.
                    </p>
                    <div class="text-center">
                        <a href="#about" class="more-btn"><span>Daha Fazla Bilgi</span> <i class="bi bi-chevron-right"></i></a>
                    </div>
                </div>
            </div>

            <div class="col-lg-8 d-flex align-items-stretch">
                <div class="d-flex flex-column justify-content-center">
                    <div class="row gy-4">

                        @if (Model != null && Model.Any())
                        {
                            var delay = 300;
                            foreach (var f in Model)
                            {
                                <div class="col-xl-4 d-flex align-items-stretch">
                                    <div class="icon-box" data-aos="zoom-out" data-aos-delay="@delay">
                                        <i class="@(f.Icon ?? "bi bi-clipboard-data")"></i>
                                        <h4>@f.Title</h4>
                                        <p>@f.Description</p>
                                    </div>
                                </div>
                                delay += 100;
                            }
                        }
                        else
                        {
                            <div class="col-xl-4 d-flex align-items-stretch">
                                <div class="icon-box" data-aos="zoom-out" data-aos-delay="300">
                                    <i class="bi bi-clipboard-data"></i>
                                    <h4>Güvenilir Tanı</h4>
                                    <p>Güncel teknolojiyle hızlı ve doğru tetkik sonuçları.</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
