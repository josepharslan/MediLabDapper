@model IEnumerable<ResultGalleryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@{
    int count = 0;
}

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Galeri</h4>
    </div>
    <div class="card-content">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-lg">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Resim</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td>
                                    <img src="@item.GalleryImageUrl" class="img-thumbnail" style="width:100px; height:100px;" />
                                </td>
                                <td>
                                    <a href="/Gallery/DeleteGallery/@item.GalleryId" class="btn btn-danger rounded-pill">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<a href="/Gallery/CreateGallery" class="btn btn-success">Yeni Görsel Ekle</a>

