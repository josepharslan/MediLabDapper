@model IEnumerable<ResultDoctorWithDepartmentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
@{
    int count = 0;
}

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Doktorlar</h4>
    </div>
    <div class="card-content">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-lg">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Resim</th>
                            <th>Ad Soyad</th>
                            <th>Açıklama</th>
                            <th>Departman</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td>
                                    <img src="@item.ImageUrl" class="img-thumbnail" style="width:100px; height:100px;" />
                                </td>
                                <td>@item.NameSurname</td>
                                <td>@item.Description</td>
                                <td>@item.Name</td>
                                <td>
                                    <a href="/Doctor/UpdateDoctor/@item.DoctorId" class="btn btn-warning rounded-pill">Güncelle</a>
                                    <a href="/Doctor/DeleteDoctor/@item.DoctorId" class="btn btn-danger rounded-pill">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<a href="/Doctor/CreateDoctor" class="btn btn-success">Yeni Doktor Ekle</a>

