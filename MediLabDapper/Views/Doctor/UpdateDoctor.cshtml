@model GetDoctorByIdDto
@{
    ViewData["Title"] = "UpdateDoctor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Doktor Güncelle</h4>
    </div>
    <div class="card-content">
        <div class="card-body">
            <form class="form form-vertical" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="DoctorId" />
                <div class="form-body">
                    <div class="form-group">
                        <label>Ad Soyad</label>
                        <input type="text" asp-for="NameSurname" id="first-name-vertical" class="form-control" placeholder="Ad Soyad">
                    </div>
                    <div class="form-group">
                        <label>Profil Fotoğrafı (opsiyonel)</label>
                        <input type="file" name="file" class="form-control" accept=".jpg,.jpeg,.png" />
                        <div class="form-text">Maksimum 5 MB • .jpg, .jpeg, .png</div>
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <input type="text" class="form-control" asp-for="Description" placeholder="Açıklama">
                    </div>
                    <div class="form-group">
                        <label>Departman</label>
                        <select asp-for="DepartmentId" asp-items="@ViewBag.departments" class="form-control">
                            <option disabled selected>Departman Seçiniz</option>
                        </select>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary me-1 mb-1">Güncelle</button>
                        <button type="reset" class="btn btn-light-secondary me-1 mb-1">Sıfırla</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
