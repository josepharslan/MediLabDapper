@model GetDepartmentByIdDto
@{
    ViewData["Title"] = "UpdateDepartment";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Departman Güncelleme</h4>
    </div>
    <div class="card-content">
        <div class="card-body">
            <form class="form form-vertical" method="post">
                <input type="hidden" asp-for="DepartmentId" />
                <div class="form-body">
                    <div class="form-group">
                        <label>Departman Adı</label>
                        <input type="text" asp-for="Name" class="form-control" placeholder="Onkoloji vb.">
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <input type="text" class="form-control" asp-for="Description" placeholder="Açıklama">
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary me-1 mb-1">Güncelle</button>
                        <button type="reset" class="btn btn-light-secondary me-1 mb-1">Sıfırla</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>