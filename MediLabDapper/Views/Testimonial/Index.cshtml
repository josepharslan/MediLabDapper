@using MediLabDapper.Dtos.TestimonialDtos
@model IEnumerable<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
@{
    int count = 0;
}

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Referanslar</h4>
    </div>
    <div class="card-content">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-lg">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Resim</th>
                            <th>Ad Soyad</th>
                            <th>Unvan</th>
                            <th>Yorum</th>
                            <th>Puan</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td>
                                    <img src="@item.ImageUrl" class="img-thumbnail" style="width:100px; height:100px;" />
                                </td>
                                <td>@item.NameSurname</td>
                                <td>@item.Title</td>
                                <td>@item.Comment</td>
                                <td>@item.RatingStar</td>
                                <td>
                                    <a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-warning rounded-pill">Güncelle</a>
                                    <a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger rounded-pill">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<a href="/Testimonial/CreateTestimonial" class="btn btn-success">Yeni Doktor Ekle</a>


