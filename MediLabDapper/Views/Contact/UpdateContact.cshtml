@using MediLabDapper.Dtos.ContactDtos
@model GetContactByIdDto
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-header">
        <h4 class="card-title">İletişim Güncelle</h4>
    </div>
    <div class="card-content">
        <div class="card-body">
            <form class="form form-vertical" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="ContactId" />
                <div class="form-body">
                    <div class="form-group">
                        <label>Adres</label>
                        <input type="text" asp-for="Location" class="form-control" placeholder="Adres giriniz...">
                    </div>
                    <div class="form-group">
                        <label>Telefon Numarası</label>
                        <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Telefon numarası giriniz...">
                    </div>
                    <div class="form-group">
                        <label>Mail Adresi</label>
                        <input type="text" class="form-control" asp-for="Email" placeholder="Mail adresi giriniz...">
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary me-1 mb-1">Güncelle</button>
                        <button type="reset" class="btn btn-light-secondary me-1 mb-1">Sıfırla</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
