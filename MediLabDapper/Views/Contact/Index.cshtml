@using MediLabDapper.Dtos.ContactDtos
@model IEnumerable<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@{
    int count = 0;
}

<div class="card">
    <div class="card-header">
        <h4 class="card-title">İletişim Bilgileri</h4>
    </div>
    <div class="card-content">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-lg">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Konum</th>
                            <th>Telefon Numarası</th>
                            <th>Mail Adresi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td>@item.Location</td>
                                <td>@item.PhoneNumber</td>
                                <td>@item.Email</td>
                                <td>
                                    <a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-warning rounded-pill">Güncelle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

